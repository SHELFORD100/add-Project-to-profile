document.addEventListener('keydown', e => {

  if (e.altKey && e.key === '1') location.href = 'index.html';
  if (e.altKey && e.key === '2') location.href = 'announcements.html';
  if (e.altKey && e.key === '3') location.href = 'contact.html';
});